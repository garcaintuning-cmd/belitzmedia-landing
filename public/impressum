  <script>
    const y = document.getElementById('year'); if(y) y.textContent = new Date().getFullYear();
    const asof = document.getElementById('asof'); if(asof){ const d=new Date(); asof.textContent = d.toLocaleDateString('de-DE',{year:'numeric',month:'2-digit',day:'2-digit'}); }
  
  // Header parallax (mouse + subtle scroll)
  (function(){
    const lw = document.querySelector('.logo-wrap');
    if(!lw) return;
    const par = lw.querySelector('.parallax');
    const onMove = (e)=>{
      const r = lw.getBoundingClientRect();
      const x = (e.clientX - r.left) / r.width - .5;
      const y = (e.clientY - r.top) / r.height - .5;
      lw.style.setProperty('--tx', (x*8).toFixed(2)+'px');
      lw.style.setProperty('--ty', (y*6).toFixed(2)+'px');
      if (par) par.style.transform = `translate(${(x*12).toFixed(2)}px, ${(y*10).toFixed(2)}px)`;
    };
    lw.addEventListener('mousemove', onMove);
    window.addEventListener('scroll', ()=>{
      const sy = Math.min(20, (window.scrollY||document.documentElement.scrollTop)*0.05);
      if (par) par.style.transform = `translate(0, ${sy.toFixed(2)}px)`;
    }, {passive:true});
  })();

  </script>
