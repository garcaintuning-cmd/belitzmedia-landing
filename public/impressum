      transition: filter .45s ease;
      display:block;
    }
    @keyframes kenburns{
      from{ transform: translate(var(--tx), var(--ty)) scale(1.02); }
      to  { transform: translate(var(--tx), var(--ty)) scale(1.06); }
    }
    .logo-wrap:hover img{ filter:none; }
    @media (hover:none) and (pointer:coarse){
      .logo-wrap:active img, .logo-wrap:focus img{ filter:none; }
