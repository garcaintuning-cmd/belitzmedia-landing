    /* === Header: Ken Burns zoom + parallax === */
    .logo-wrap{ --tx:0px; --ty:0px; overflow:hidden }
    .logo-wrap img{
      filter: grayscale(1) saturate(0) brightness(.85);
      transform-origin: 50% 50%;
